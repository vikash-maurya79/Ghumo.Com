<%layout("/layout/boilerplate.ejs")%>

  <div class="options_div">

    <div class="option_div">
      <i class="fa-solid fa-fire"></i>
      <p class="opt">Trending</p>
    </div>

    <div class="option_div">
      <i class="fa-regular fa-snowflake"></i>
      <p class="opt">Arctic</p>
    </div>

    <div class="option_div">
      <i class="fa-solid fa-bed"></i>
      <p class="opt">Rooms</p>
    </div>

    <div class="option_div">
      <i class="fa-solid fa-mountain-city"></i>
      <p class="opt">Iconic cities</p>
    </div>

    <div class="option_div">
      <i class="fa-solid fa-mountain-sun"></i>
      <p class="opt">Mountains</p>
    </div>

    <div class="option_div">
      <i class="fa-brands fa-fort-awesome"></i>
      <p class="opt">Castles</p>
    </div>

    <div class="option_div">
      <i class="fa-solid fa-campground"></i>
      <p class="opt">Camping</p>
    </div>
   <div class="form-check form-switch form-check-reverse">
  <input class="form-check-input" type="checkbox" id="switchCheckReverse">
  <label class="form-check-label" for="switchCheckReverse">Show Tax</label>
</div>


  </div>

  <div class="image_div">
    <%for(let data_fetched of data ){%>
      <a href="/product/<%=data_fetched._id%>/view">
        <div class="card" style="width: 16rem; margin: 2rem;">
          <img src="<%=data_fetched.image.url%>" class="card-img-top" alt="Product image">
          <div class="card-body">
            <p class="card-text">
              <%=data_fetched.descreption%> &nbsp; <%=data_fetched.city%>
                  <br>
                  <%=data_fetched.state%>
            </p>
            <p class="price_place">
              <%=formatINR(data_fetched.price)%>/night &nbsp;<i class="tax">+18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <%}%>
  </div>