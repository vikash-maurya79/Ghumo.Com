
<form class="row g-4 m-3 needs-validation" novalidate class="listing_form" method="POST" action="/new_listings">
  <div class="col-md-6 ">
    <label for="inputEmail4" class="form-label">Descreption</label>
    <input type="text" class="form-control" id="inputEmail4" name="descreption" required>
    <div class="valid-feedback">Correct</div>
  </div>
  <div class="col-md-6">
    <label for="inputEmail4" class="form-label">Image Url</label>
    <input type="text" class="form-control" id="inputEmail4" name="image_url">
</div>
  <div class="col-12">
    <label for="inputAddress" class="form-label">Address</label>
    <input type="text" class="form-control" id="inputAddress" name="address" placeholder="Village/Town , Area , Subdistrict , District" required>
    <div class="invalid-feedback">Now Good</div>
  </div>
  <div class="col-12">
    <label for="inputAddress2" class="form-label">Address 2</label>
    <input type="text" class="form-control" id="inputAddress2" name="address2" placeholder="Apartment, studio, or floor">
  </div>
  <div class="col-md-6">
    <label for="inputCity" class="form-label">City</label>
    <input type="text" class="form-control" name="city" id="inputCity" required>
  </div>
  <div class="col-md-4">
    <label for="inputState" class="form-label">State</label>
    <select id="inputState" class="form-select" name="state" required>
      <option selected>Choose...</option>
      <option>Uttar Pradesh</option>
      <option>Uttarakhand</option>
      <option>Madhya Pradesh</option>
    </select>
  </div>
  <div class="col-md-2">
    <label for="inputZip" class="form-label">Pincode</label>
    <input type="number" class="form-control" name="pincode" id="inputZip" required>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">List</button>
  </div>
</form>
<%layout("/layout/boilerplate")%>
